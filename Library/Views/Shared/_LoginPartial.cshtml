@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager
@if (signInManager.IsSignedIn(User))
{
    ApplicationUser applicationUser = await userManager.GetUserAsync(User);
    <ul class="navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" asp-page="/Account/Manage/Index" asp-area="Identity">Welcome back @applicationUser.Email!</a>
        </li>
        <li class="nav-item active">
            <form class="form-inline" method="post" asp-page="/Account/Logout" asp-area="Identity">
                <button type="submit" class="btn btn-link text-white">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" asp-page="/Account/Register" asp-area="Identity">Register</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" asp-page="/Account/Login" asp-area="Identity">Login</a>
        </li>
    </ul>
}
