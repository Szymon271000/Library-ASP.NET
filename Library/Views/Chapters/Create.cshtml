@model ChapterCreateInputModel
<h1>@ViewData["Title"]</h1>
<form method="post">
    <input type="hidden" asp-for="BookId">
    <div class="row">
        <div class="col-12">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mb-3">
            <input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Add a title...">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Create chapter</button>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_Validation"/>
}
